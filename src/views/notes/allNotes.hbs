<div class="row">
  {{#each notes}}
    <div class="col-3">
      <div class="card">
        <div class="card-body">
          <h4
            class="card-title d-flex justify-content-between align-items-center"
          >
            {{title}}
            <a href="/notes/edit/{{_id}}"><i class="fa fa-edit"></i></a>
          </h4>
          <p>
            {{description}}
          </p>

          <form action="/notes/delete/{{_id}}?_method=DELETE" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            <div class="d-grid grap-1">

              <button class="btn btn-danger" type="submit">Delete</button>
            </div>
          </form>

        </div>
      </div>
    </div>
  {{else}}
    <div class="col-3 mx-auto">
      <div class="card">
        <div class="card-body">
          <div class="tittle">
            <p class="lead">No hay Notas a√∫n.</p>
          </div>
          <hr />
        </div>
        <div class="d-grid grap-1 m-1">
          <a href="/notes/add" class="btn btn-success">Agrega una</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>