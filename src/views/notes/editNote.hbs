<div class="col-4 mx-auto">
  <div class="card bg-light">
    <div class="card-header">
      <h3>Edit the Note</h3>
    </div>
    <div class="card-body">
      <form
        name=""
        action="/notes/editNote/{{note._id}}?_method=PUT"
        method="post"
      >
        <input type="hidden" name="_method" value="PUT" />
        <div class="mb-3 form-group">
          <label for="title" class="form-label">TÃ­tulo para la Nota</label>
          <input
            type="text"
            class="form-control"
            id="tit"
            name="title"
            autofocus="true"
            placeholder="Titulo"
            value="{{note.title}}"
          />
        </div>
        <div class="mb-3 form-group">
          <label for="description" class="form-label">Contenido</label>
          <textarea
            name="description"
            class="form-control"
            id="descrip"
            rows="3"
          >{{note.description}}</textarea>
        </div>
        <div class="d-grid gap-1">
          <button class="btn btn-primary" type="submit">Guardar</button>
        </div>
      </form>
    </div>
  </div>
</div>